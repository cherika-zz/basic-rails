 <%= form_for [@post, @new_comment], remote: true do |f| %>
   <div>
     <%= f.label :body %>
     <%= f.text_field :body, rows: 8, class: 'form-control', placeholder: "Enter comment body" %>
   </div>
   <div class="form-group">
     <%= f.submit "Save", class: 'btn btn-success' %>
   </div>
 <% end %>